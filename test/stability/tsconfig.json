{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node", "@testing-library/jest-dom"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../src/*"],
      "@test/*": ["../*"],
      "@stability/*": ["./*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../../src/tests/setup.ts",
    "./setup.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
